<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quarter_holder"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginHorizontal="@dimen/d1"
    android:layout_marginTop="@dimen/d4"
    android:layout_marginBottom="@dimen/d4"
    app:cardCornerRadius="@dimen/corner_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/quarterNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d3"
            android:gravity="center"
            android:text="@string/dummy_data_quarter"
            android:textSize="@dimen/font_size_m"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/quarterData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d3"
            android:gravity="center"
            android:text="@string/dummy_data_quarter"
            android:textSize="@dimen/font_size_m"
            app:layout_constraintTop_toBottomOf="@id/quarterNumber" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>