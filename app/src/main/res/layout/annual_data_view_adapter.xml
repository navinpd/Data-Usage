<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d1"
    android:elevation="@dimen/elevation_lvl2"
    app:cardCornerRadius="@dimen/corner_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/annualYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:gravity="center"
            android:paddingTop="@dimen/d1"
            android:paddingBottom="@dimen/d1"
            android:text="@string/dummy_annual_text"
            android:textSize="@dimen/font_size_m"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginHorizontal="@dimen/d1"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/totalUsedData"
            app:layout_constraintTop_toBottomOf="@id/annualYear" />

        <TextView
            android:id="@+id/totalUsedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:gravity="center"
            android:paddingTop="@dimen/d1"
            android:paddingBottom="@dimen/d1"
            android:text="@string/dummy_Data"
            android:textSize="@dimen/font_size_m"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/annualYear" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
